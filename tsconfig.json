{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "module": "ES2022",
        "target": "ESNext",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "importsNotUsedAsValues": "error",
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "nodenext"
    }
}
